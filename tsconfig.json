{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": ".",
    "outDir": "dist",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}
